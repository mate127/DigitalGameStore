@model IEnumerable<DigitalGameStore.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm mt-2">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReviewId" class="btn btn-warning btn-sm mt-2">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ReviewId" class="btn btn-primary btn-sm mt-2">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ReviewId" class="btn btn-danger btn-sm mt-2">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
